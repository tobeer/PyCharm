# 爬取Python之禅
import lxml.html
import requests

"""
1. 访问站点
2. 定位所需信息
3. 得到并处理信息
"""
url = 'https://www.python.org/dev/peps/pep-0020/'
xpath = '//*[@id="the-zen-of-python"]/pre/text()'  # XPath路径表达式，选取所有元素，且这些元素拥有值为"the-zen-of-python"的id属性。
res = requests.get(url)
ht = lxml.html.fromstring(res.text)  # parse the html, return a single element/document
text = ht.xpath(xpath)
print('Hello,\n' + ''.join(text))
